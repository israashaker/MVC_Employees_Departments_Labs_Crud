@model Department
@{
    ViewBag.title = "Details";
}
<h2>Details</h2>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Employees</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            @foreach (Employee emp in Model.Employees)
            {
                <td>@emp.Name</td>
            }
        </tr>

    </tbody>
</table>
<a href="/department/index" class="btn btn-success">Back To List</a>
