@model Employee
@{ 
    ViewBag.title = "Details";
}
<h2>Details</h2>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>>
            <th>Age</th>
            <th>Gender</th>
           
        </tr>
    </thead>
    <tbody>
          <tr>
                <td>@Model.Name</td>
                <td>@Model.Email</td>
                <td>@Model.Department.Name</td>
                <td>@Model.Age</td>
                <td>@Model.Gender</td>
                
            </tr>
        
    </tbody>
</table>
<a href="/employees/index" class="btn btn-success">Back To List</a>